<!DOCTYPE html>
<html>
  <head>
    <title>MyHealthAppoitment</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/index.css'/>
  </head>
  <body>
    <section id="header">
      <a href="#"><img src="images/Hlogo.jpg" class="logo"></a>
      <div>
        <ul id="navbar">
          <li><button onclick="showHospitals()" type="submit" class="active" class="active" >Appointment</button></li>
            <li><a href="/login">Login</a></li>
            <!-- <li><a href="/SignUp">SignUp</a></li> -->
        </ul>
    </div>
      </section>
      <div id="myModal" class="modal">
      
        <div class="modal-content">
          <button class="close" onclick="closeModal()">&times;</button>
          <p>wait for moment to confirm...</p>
        </div>
      </div>
  </body>
  <script>
       var modal = document.getElementById("myModal");

    function showHospitals() {
      
      window.location.href = '/hospital'
    }
       
    function closeModal() {
      modal.style.display = "none";
      localStorage.removeItem("confirmationModal");
    }
    // When the user clicks the button, open the modal
    (() => {
      // debugger

      confirmationModal = localStorage.getItem("confirmationModal");

      if (confirmationModal) {
        modal.style.display = "block";
      } else {
        modal.style.display = "none";
      }
    })()
  </script>
</html>
